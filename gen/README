CREATE TABLE sqlite_sequence(name,seq);

CREATE TABLE "post" (
	`id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`category_id`	INTEGER,
	`title`	TEXT,
	`body`	TEXT,
	`picture`	TEXT,
	`url`	TEXT,
	`waktu`	INTEGER
);

CREATE TABLE `category` (
	`id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`name`	TEXT
);

CREATE TABLE `sub_category` (
	`id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`category_id`	INTEGER,
	`name`	TEXT
);


