CREATE TABLE sqlite_sequence(name,seq);

CREATE TABLE "tposts" (
	`id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`category_id`	INTEGER,
	`title`	TEXT,
	`body`	TEXT,
	`picture`	TEXT,
	`url`	TEXT
);

CREATE TABLE `tcategories` (
	`id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`category`	TEXT
);


